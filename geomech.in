SIMULATION
 SIMULATION_TYPE GEOMECHANICS_SUBSURFACE
 PROCESS_MODELS
  SUBSURFACE_FLOW
   MODE RICHARDS
  /
  GEOMECHANICS_SUBSURFACE geom
 /
END
#---
SUBSURFACE
#--- Spatial discretization
GRID
 TYPE STRUCTURED
 NXYZ 15 15 3
 DXYZ
  1524
  1524
  10 10 10
 /
END
#--- Layers property
MATERIAL_PROPERTY layer1
 ID 1
 POROSITY 0.15
 CHARACTERISTIC_CURVES satu
 PERMEABILITY
  PERM_HORIZONTAL 9.07e-11
  VERTICAL_ANISOTROPY_RATIO 1
 /
END

MATERIAL_PROPERTY layer2
 ID 2
 POROSITY 0.15
 CHARACTERISTIC_CURVES satu
 PERMEABILITY
  PERM_HORIZONTAL 9.07e-16
  VERTICAL_ANISOTROPY_RATIO 1
 /
END

MATERIAL_PROPERTY layer3
 ID 3
 POROSITY 0.15
 CHARACTERISTIC_CURVES satu
 PERMEABILITY
  PERM_HORIZONTAL 9.07e-12
  VERTICAL_ANISOTROPY_RATIO 1
 /
END

#--- Characteristic curves
CHARACTERISTIC_CURVES satu
  SATURATION_FUNCTION VAN_GENUCHTEN
    M 1.d-30
    ALPHA  1.9401d-4
    LIQUID_RESIDUAL_SATURATION 0.115
  /
  PERMEABILITY_FUNCTION MUALEM_VG_LIQ
    M 1.d-30
    LIQUID_RESIDUAL_SATURATION 0.115
  /
END

#--- Regions
REGION ly1
 COORDINATES
 0 0 0
 22860 22860 10
 /
 FACE TOP
END

REGION ly2
 COORDINATES
  0 0 10
  22860 22860 20
 /
END

REGION ly3
 COORDINATES
  0 0 20
  22860 22860 30
 /
END

REGION all
 COORDINATES
  0 0 0
  22860 22860 30
 /
END
#--- Strata
STRATA
 MATERIAL layer1
 REGION ly1
END

STRATA
 MATERIAL layer2
 REGION ly2
END

STRATA
 MATERIAL layer3
 REGION ly3
END
#--- Flow condition
FLOW_CONDITION rch
 TYPE
  RATE VOLUMETRIC_RATE NEIGHBOR_PERM
 /
 RATE 1 m^3/day
# RATE 0.d0   1.d-5 0.d0 kg/s kg/s MW
END

FLOW_CONDITION chd
 TYPE
  LIQUID_PRESSURE DIRICHLET
 /
 LIQUID_PRESSURE 0.
END
#--- Boundary conditions
#BOUNDARY_CONDITION
# FLOW_CONDITION rch
# REGION ly1
#END

SOURCE_SINK 
  FLOW_CONDITION rch
  REGION ly1
END
#--- INITIAL CONDITION
INITIAL_CONDITION
 FLOW_CONDITION chd
 REGION all
END
#--- Time
TIME
  FINAL_TIME 24 h
  INITIAL_TIMESTEP_SIZE 0.01 h
  MAXIMUM_TIMESTEP_SIZE 5.d-2 y
END
#--- Output
OUTPUT
 TIMES y 0.01 0.1 1.0
 FORMAT TECPLOT POINT
END
END_SUBSURFACE
#---Geomechanics
GEOMECHANICS
GEOMECHANICS_GRID
  TYPE unstructured mesh_for_pflotran.umi
  GRAVITY 0.0 0.0 0.0
END
END_GEOMECHANICS
